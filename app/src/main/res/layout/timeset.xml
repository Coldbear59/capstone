<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/timesetview"
    android:background="@drawable/timeset"
   >

    <TextView
        android:id="@+id/serchroomtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="빈 강의실 찾기"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/serchroomtext"
        android:textColor="#000000"
        android:layout_marginTop ="70dp"
        android:text="시간"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginTop ="60dp"
        android:background="#FCFCD1">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:text="@string/week_prompt"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/week_spinner_dropdown"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:prompt="@string/week_prompt"
            android:spinnerMode="dropdown"
            style = "@style/week_spinner_st"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:text="@string/time_prompt"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/time_spinner"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:prompt="@string/time_prompt"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="10dp"
                style = "@style/week_spinner_st"
                />

    </LinearLayout>
</RelativeLayout>
